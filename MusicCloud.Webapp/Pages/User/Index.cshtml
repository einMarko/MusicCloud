@page
@model MusicCloud.Webapp.Pages.User.IndexModel
<p>
    Diese Tabelle zeigt alle angelegten User. Sie dient nur der Veranschaulichung und wird
    in echten Programmen natürlich nie veröffentlicht.
</p>
<table class="table table-sm">
    <thead>
        <tr>
            <th>Username</th>
            <th>Type</th>
            <th>Salt</th>
            <th>Password Hash</th>
            <th>Artist(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model.Users)
        {
            <tr>
                <td>@u.Username</td>
                <td>@u.Usertype</td>
                <td><pre>@u.Salt</pre></td>
                <td><pre>@u.PasswordHash</pre></td>
                <td>@string.Join(", ", u.Artists.Select(ar=>ar.ArtistName).OrderBy(ar=>ar))</td>
            </tr>
        }
    </tbody>
</table>
